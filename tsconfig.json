{
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "target": "ES2016",
        "module": "ES2015",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}